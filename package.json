{
  "name": "pic-mint",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.ts --network local",
    "mint": "hardhat run scripts/mint.ts --network local",
    "verify-local": "hardhat run scripts/verify.ts --network local",
    "node": "hardhat node",
    "image-server": "node image-server.cjs",
    "dev": "concurrently \"npm run node\" \"npm run image-server\" \"cd frontend && npm run dev\"",
    "start-all": "npm run dev",
    "watermark-system": "./start-watermark-system.sh",
    "stop-system": "./stop-watermark-system.sh",
    "status": "./check-system-status.sh",
    "enhanced-mint": "node enhanced-mint.js"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/node": "^20.11.0",
    "concurrently": "^9.2.1",
    "hardhat": "^2.22.5",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "ethers": "^6.12.0",
    "express": "^5.1.0",
    "form-data": "^4.0.0",
    "ipfs-http-client": "^60.0.0",
    "multer": "^2.0.2",
    "multiformats": "^12.1.3",
    "node-fetch": "^3.3.2",
    "sharp": "^0.32.6"
  }
}
