{
  "name": "photomint",
  "version": "1.0.0",
  "description": "Decentralized photo NFT platform with invisible watermarking",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:frontend && npm run build:contracts",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:contracts": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.ts --network hardhat",
    "mint": "node scripts/mint.js",
    "verify-local": "node scripts/verify.js",
    "node": "npx hardhat node",
    "image-server": "node image-server.cjs",
    "dev": "concurrently \"npm run node\" \"npm run image-server\" \"cd frontend && npm run dev\"",
    "start-all": "./start-watermark-system.sh",
    "watermark-system": "./start-watermark-system.sh",
    "stop-system": "./stop-watermark-system.sh",
    "status": "./check-system-status.sh",
    "enhanced-mint": "node enhanced-mint.js",
    "vercel-build": "npm run build:frontend"
  },
  "keywords": [
    "nft",
    "blockchain",
    "photography",
    "watermarking",
    "ethereum",
    "hardhat",
    "react",
    "typescript"
  ],
  "author": "PhotoMint Team",
  "license": "MIT",
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.4",
    "ethers": "^6.9.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "crypto": "^1.0.1",
    "ipfs-http-client": "^60.0.1",
    "multiformats": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}